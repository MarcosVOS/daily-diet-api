{
  "name": "daily-diet-api",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "docker compose -f infra/compose.yml up -d database --wait && npm run knex:migrate && node --watch src/server.ts",
    "test": "vitest",
    "commit": "cz",
    "test:watch": "docker compose -f infra/compose.yml up -d test-database --wait && vitest --watch",
    "prepare": "husky",
    "lint:check": "prettier . --check",
    "lint:fix": "prettier . --write",
    "knex": "node --no-warnings --import tsx ./node_modules/.bin/knex",
    "knex:migrate": "npm run knex -- migrate:latest",
    "knex:rollback": "npm run knex -- migrate:rollback",
    "knex:make": "npm run knex -- migrate:make"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.1",
    "knex": "^3.1.0",
    "pg": "^8.16.3",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.6.1",
    "@types/supertest": "^6.0.3",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.0.1",
    "husky": "^9.1.7",
    "prettier": "3.7.2",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "vitest": "^4.0.14"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
